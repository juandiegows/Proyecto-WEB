@model List<Servicio_WCF.Models.ObtenerResult>

<script src="~/js/sweetalert2.min.js" ></script>
<script>

    function Eliminar(id) {
        Swal.fire({
            title: '¿Está segur@@ que desea eliminar?',
            text: "esta acción no se puede revertir",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Si, Eliminar',
            cancelButtonText : "No"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "@Url.Action("Eliminar", "Usuario")" + "?id=" + id;
            }
        })
    }

</script>
@if (@ViewBag.Eliminar) {
   <script>
        window.history.pushState({}, null, '/Usuario/consulta');
        Swal.fire(
            'Se ha Elimiando!',
            'Se ha Elimiando correctamente',
            'success'
        )
        @ViewBag.Eliminar = false;

   </script>
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Fecha Nacimiento</th>
            <th scope="col">Sexo</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model) {
            <tr>
                <th scope="row">@usuario.Id</th>
                <td>@usuario.Nombre</td>
                <td>@usuario.FechaNacimiento.ToShortDateString()</td>
                <td>@usuario.Sexo</td>
                <td><div class="acciones">
                    
                    <a onclick="javascript:Eliminar(@usuario.Id)" class="icon"><img src="/img/borrar.png" /></a> <a asp-controller="Usuario" asp-action="Editar" asp-route-id="@usuario.Id" class="icon"><img src="/img/editar.png" /></a></div></td>
            </tr>
        }
    </tbody>
</table>

